<section>
    <h2>Create New Blog</h2>

    <form class="new-post-form">
        <div>
            <label for="blog-title">Title</label>
            <input type="text" id="blog-title" name="blog-title" />
        </div>
        <div>
            <label for="blog-text">Blog</label>
            <textarea id="blog-text" name="blog-text" /></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if post.length}}
<section>
    <h2>Your Blogs</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit blog</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>